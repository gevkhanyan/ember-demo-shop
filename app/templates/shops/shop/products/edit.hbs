<div class="col-11">
    <div class="title text-center col-12 text-uppercase">
        <h1>Edit Product</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-6">
            <form class=""  {{action "editProduct" model.id on="submit"}}>
                <div class="form-group">
                    {{input type="text" class="form-control" placeholder="Name"
                            value=model.name}}
                </div>
                <div class="form-group">
                    {{input type="number" class="form-control" placeholder="Quantity"
                            value=model.quantity}}
                </div>
                <div class="form-group">
                    {{input type="number" class="form-control" placeholder="Price"
                            value=model.price}}
                </div>

                <div class="btn-group d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary mr-2"
                            disabled={{isUpdateButtonDisabled}}>Update</button>
                    {{#link-to "shops.shop.products"}}
                        <button {{action "discardChanges"}} class="btn btn-secondary">Cancel</button>
                    {{/link-to}}
                </div>
            </form>
        </div>
    </div>
</div>